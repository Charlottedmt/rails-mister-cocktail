<div class="test">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1610478920454-8df995a1d60a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80)">
    <div class="menu absolute">
        <%= link_to 'Create a cocktail',  new_cocktail_path, class: 'btn btn-danger' %>
    </div>
  </div>
</div>


<div class="container">
  <div class="cards mt-5">
    <% @cocktails.each do |cocktail| %>
    <%if cocktail.photo.attached?%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    <%else%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/400x300/?cocktail,<%=cocktail.name%>')">
    <%end%>
     <h2><%=link_to cocktail.name, cocktail_path(cocktail)%></h2>
    </div>
    <%end%>
  </div>
</div>



